@model IEnumerable<Examination_system.Models.Course>
@{
    ViewBag.Title = "Courses";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
</br>
</br>
</br>
</br>

@if (@Model.Count() == 0)
{
    <h1>There Is No Exams In Current Time.</h1>
}

<section id="Services">
    <div class="container">
        <div class="services-wrapper">
            @foreach (var course in Model)
            {
            <div class="each-service">
                @*  <div class="service-icon"><i class="fa fa-shopping-bag" aria-hidden="true"></i></div>*@


                <h5 class="service-title">
                    @course.Course_Name
                </h5>
                <p class="service-description">@course.Course_Desc</p>


                @using (Html.BeginForm("registercourse", "course", new { @Course_id = course.Course_id }, FormMethod.Post, null))
                {
                    @Html.AntiForgeryToken()
                    @Html.ActionLink("More Details>>", "Details", "course", new { id = course.Course_id }, new { @class = "btn btn-success stretched-link" })
                    <button class="btn btn-primary" type="submit">Join Now</button>
                }

            </div>
            }


        </div>
    </div>
</section>
